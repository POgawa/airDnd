<%= content_for :title, "New " %>

<%= render "layouts/errors", :object => @unit%>




<%= bootstrap_form_for @unit do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.text_field :name, placeholder: 'Add Name'  %>
  <%= f.text_area :description, placeholder: 'Add Description'  %>
  <%= f.text_field :address, placeholder: 'Add Address'  %>
  <%= f.text_field :city, placeholder: 'Add City'  %>
  <%= f.text_field :state, placeholder: 'Add State'  %>
  <%= f.text_field :zip, placeholder: 'Add Zip'  %>

  <%= f.submit 'Add Dwelling', data:{disable_with: 'Dwelling....'}, class: 'btn btn-success btn-block' %>

<% end %>

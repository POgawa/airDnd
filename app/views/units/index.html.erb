<h1 class="page-header text-center">Dwellings for Plundering</h1>

<% @units.in_groups_of(2, false).each do  |units| %>
  <div class="row">
    <% units.each do |unit| %>
      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
        <div class="well">
        <%= link_to unit do %>
          <p class="lead text-center">  <%= unit.name %></p>
          <% if unit.photos.any? %>
            <%= image_tag(unit.photos.first.avatar.url(:thumb), class: 'img-responsive') %>
          <% else %>
            <%= image_tag('house.png', class: 'img-responsive') %>
          <% end %>
        <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<h1>Reservation for: <%= @reservation.unit.name %> </h1>

<h1> Occupants: <%= @reservation.user.name %> </h1>

 <h3>Check in date: <%= @reservation.start_date %> </h3>
<h3> Check out date: <%= @reservation.end_date %> </h3>


<%= link_to 'Change reservation', edit_unit_reservation_path(@unit, @reservation) %>

<%= link_to "Delete this reservation", unit_reservation_path(@unit, @reservation), class: "btn btn-danger",
                                                      data: { confirm: 'Are you sure?',
                                                              method: 'delete'} %>
